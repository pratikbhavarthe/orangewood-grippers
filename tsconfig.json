{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Allows absolute imports
    "paths": {
      "@/*": ["./*"] // Alias for project root
    },
    "typeRoots": [
      "./node_modules/@types", // Default type declarations
      "./types" // Custom types directory
    ],
    "forceConsistentCasingInFileNames": true, // Enforces consistent file casing
    "strictNullChecks": true, // Ensures proper null handling
    "noImplicitAny": true, // Disallows implicit any types
    "allowSyntheticDefaultImports": true // Allows default imports for CommonJS modules
  },
  "include": [
    "next-env.d.ts", // Next.js environment declarations
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts" // Next.js specific type files
  ],
  "exclude": [
    "node_modules", // Exclude dependencies
    "out", // Build output folder
    ".next", // Next.js build folder
    "**/*.test.ts", // Exclude test files (if applicable)
    "**/*.spec.ts" // Exclude spec files (if applicable)
  ]
}
